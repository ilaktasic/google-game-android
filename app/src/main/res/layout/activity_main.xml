<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/playerNumber"
        android:layout_width="158dp"
        android:layout_height="196dp"
        android:layout_marginStart="111dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="35dp"
        android:checkedButton="@+id/twoPlayers"
        app:layout_constraintBottom_toTopOf="@+id/startGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/twoPlayers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2 players"
            android:textAlignment="center"
            tools:text="2 players" />

        <RadioButton
            android:id="@+id/threePlayers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3 players"
            android:textAlignment="center"
            tools:text="3 players" />

        <RadioButton
            android:id="@+id/fourPlayers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4 players"
            android:textAlignment="center"
            tools:text="4 players" />
    </RadioGroup>

    <Button
        android:id="@+id/startGame"
        android:layout_width="163dp"
        android:layout_height="61dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="111dp"
        android:text="Start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerNumber" />
</android.support.constraint.ConstraintLayout>